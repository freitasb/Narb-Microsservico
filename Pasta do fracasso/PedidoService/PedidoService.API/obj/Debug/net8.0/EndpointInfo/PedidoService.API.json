{
  "openapi": "3.0.1",
  "info": {
    "title": "PedidoService.API",
    "version": "1.0"
  },
  "paths": {
    "/api/Cliente": {
      "post": {
        "tags": [
          "Cliente"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CriarClienteCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CriarClienteCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CriarClienteCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Pedido": {
      "post": {
        "tags": [
          "Pedido"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CriarPedidoCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CriarPedidoCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CriarPedidoCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CriarClienteCommand": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "cpf": {
            "type": "string",
            "nullable": true
          },
          "telefone": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CriarPedidoCommand": {
        "type": "object",
        "properties": {
          "clienteId": {
            "type": "string",
            "format": "uuid"
          },
          "itens": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CriarPedidoItemDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CriarPedidoItemDto": {
        "type": "object",
        "properties": {
          "produtoId": {
            "type": "string",
            "format": "uuid"
          },
          "nomeProduto": {
            "type": "string",
            "nullable": true
          },
          "quantidade": {
            "type": "integer",
            "format": "int32"
          },
          "precoUnitario": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      }
    }
  }
}